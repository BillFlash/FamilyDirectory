@model FamilyDirectory.web.Models.AddEditVM
@{
    ViewBag.Title = "Add Family Member";
}
<body background="https://fbcdn-sphotos-h-a.akamaihd.net/hphotos-ak-xpf1/t1.0-9/10169341_10203135297199036_3514688134884225753_n.jpg">

    <h1><font color="violetblue">Please add the family member by filling in the form below!</font></h1>
    <form method="post">
        <font style="color: cornflowerblue; font-size: 1.5em;" />
        <h1>Enter First Name</h1>
        @Html.EditorFor(x => x.Person.FirstName)
       <h1>Enter Last Name</h1>
        @Html.EditorFor(x => x.Person.LastName)
        <h1>Enter Picture URL</h1>
        @Html.EditorFor(x => x.Person.Picture)
        <h1>Enter Birthday</h1>
        @Html.EditorFor(x => x.Person.Birthday)
        <h1>Enter Biography</h1>
        @Html.TextAreaFor(x => x.Person.Bio, 5, 125, null)<br /><br />
        
        <input class="btn btn-success" type="submit" value="@Model.ButtonMessage" />
    </form>
    @if (Model.ButtonMessage == "Submit Changes")
    {
        <form method="post">
            <input class="btn btn-danger" type="submit" value="Delete" />
            <a href="/Home/AddPerson" class="btn btn-danger"><span class="glyphicon glyphicon-user"></span> Add a Person!</a>


        </form>
    }
</body>
<a href="/Home/AddPerson"></a>
